<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        
    </package>
    <package name="juan" extends="struts-default">
        <action name="comprobarLogin" class="acciones.Login">
            <result name="success">/index.jsp</result>
            <result name="error">/login.jsp</result>
        </action>
    </package>
    
    <package name="alberto" extends="struts-default">
        <action name="NoticiaCard" class="acciones.NoticiaCard">
            <result name="success">/vistas/noticia.jsp</result>
        </action>
        <action name="CrearEditarNoticia" class="acciones.NoticiaCard">
            <result name="success">/vistas/crear_editar_noticia.jsp</result>
        </action>
    </package>
    
    
</struts>
